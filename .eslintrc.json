{
  "extends": [
    "airbnb-base"
  ],
  "parser": "babel-eslint",
  "rules": {
    "import/extensions": [
      "always"
    ],
    "no-confusing-arrow": [
      "error"
    ],
    "import/no-extraneous-dependencies": "off",
    "import/no-cycle": "off",
    "no-unused-vars": "off",
    "no-console": "off",
    "import/no-unresolved": "off",
    "no-return-await": "off",
    "max-len": "off",
    "no-plusplus": "off",
    "no-case-declarations": "off",
    "consistent-return": "off"
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [
          ".js"
        ]
      }
    }
  },
  "globals": {
    "describe": true,
    "before": true,
    "after": true,
    "it": true
  }
}
